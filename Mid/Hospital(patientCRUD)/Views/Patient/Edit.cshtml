
@{
    ViewBag.Title = "Edit";
}

<center>
    <h2>Edit</h2>
    <form action="/Patient/Edit" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        Name <input type="text" name="Name" class="form-control" value="@Model.Name" placeholder="Name" />
        Date of Birth <input type="date" name="Dob" class="form-control" value="@Model.Dob" />
        Email <input type="text" name="Email" class="form-control" value="@Model.Email" placeholder="Email" /><br />
        <input type="submit" value="Edit" class="btn btn-primary" />
    </form>
</center>